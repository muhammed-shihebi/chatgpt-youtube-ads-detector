{
    "name": "Youtube Content Ads Detector",
    "short_name": "Youtube Content Ads Detector",
    "description": "Detects what part of a video contains ads",
    "homepage_url": "https://github.com",
    "version": "0.0.1",
    "version_name": "0.0.1",
    "manifest_version": 3,
    "default_locale": "en",
    "minimum_chrome_version": "88",
    "permissions": ["activeTab", "background", "storage", "tabs", "notifications"],
    "host_permissions": ["https://www.youtube.com/*", "http://www.youtube.com/*"],    
    "icons": {
        "128": "assets/img/128x128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "externally_connectable": {
        "matches": ["https://api.openai.com/*", "https://www.youtube.com/*"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*", "http://www.youtube.com/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/img/16x16.png",
            "24": "assets/img/24x24.png",
            "32": "assets/img/32x32.png"
        },
        "default_title": "GPT everywhere",
        "default_popup": "popup.html"
    }
}
